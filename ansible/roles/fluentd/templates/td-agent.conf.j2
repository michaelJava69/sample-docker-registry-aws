<match debug.**>
      type logzio_buffered
      endpoint_url https://listener.logz.io:8071?token={{ logziotoken }}&type=website
      output_include_time true
      output_include_tags true
      #buffer_type    file
      #buffer_path    ~/test
      flush_interval 10s
      buffer_chunk_limit 1m
</match>

## Sources
<source>
  @type forward
  @id input_forward
</source>

<source>
  @type tail
  format nginx
  path /var/log/nginx/access.log
  tag debug.nginx.access
</source>
